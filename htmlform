        <script>
            //I had trouble linking an outside Js document to this, so I chose inline in order to make sure it worked. 
    function validateName(first_name){
      // this is a validation rule
      var re = /[A-Za-z -']$/;
      // here we check the input
      if(re.test(document.getElementById(first_name).value)){
        // Style green if good
        document.getElementById(first_name).style.background ='#ccffcc';
        // Hide error prompt
        document.getElementById(first_name + 'Error').style.display = "none";
        return true;
      }else{
        // Style red if bad
        document.getElementById(first_name).style.background ='#e35152';
        // Show error prompt
        document.getElementById(first_name + 'Error').style.display = "block";
        return false; 
      }
} 
            function validateName(last_name){
      // Validation rule
      var re = /[A-Za-z -']$/;
      // Check input
      if(re.test(document.getElementById(last_name).value)){
        // Style green
        document.getElementById(last_name).style.background ='#ccffcc';
        // Hide error prompt
        document.getElementById(last_name + 'Error').style.display = "none";
        return true;
      }else{
        // Style red
        document.getElementById(last_name).style.background ='#e35152';
        // Show error prompt
        document.getElementById(last_name + 'Error').style.display = "block";
        return false; 
      }
                function validateEmail(email){ 
      var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
      if(re.test(email)){
        document.getElementById('email').style.background ='#ccffcc';
        document.getElementById('emailError').style.display = "none";
        return true;
      }else{
        document.getElementById('email').style.background ='#e35152';
        return false;
      }
    }
        </script>
